@model IEnumerable<MusicShop.Models.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Selected)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Selected)
                </td>*@
            <td>
                <a asp-controller="Role" asp-action="Edit" asp-route-Name="@item.Name" >Edit</a> |
                <a asp-controller="Role" asp-action="Details" asp-route-Name="@item.Name">Details</a> |
                <a asp-controller="Role" asp-action="Delete" asp-route-Name="@item.Name" onclick="return confirm('Confirm delition of role: @item.Name')">Delete</a> 
               
            </td>
            </tr>
        }
    </tbody>
</table>
