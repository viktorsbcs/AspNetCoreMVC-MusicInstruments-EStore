@model MusicShop.Models.ViewModels.LoginViewModel

<div class="col-12">
    <h1>Login</h1><br /> 


    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger @((ViewContext.ViewData.ModelState.Count==0) ?  "invisible" : "")"></div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
            </label>
        </div>

        <input type="hidden" asp-for="@Model.ReturnUrl" />
        <div class="form-group">
            <input type="submit"  value="Login" class="btn btn-primary" />
        </div>
    </form>


</div>

